{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('login_css') }}
{% endblock %}

{% block body %}
    <img class="background" src="{{ asset('images/home/background.jpg') }}">

    <a href="{{ path('home') }}"><img class="arrow-left" src="{{ asset('images/login/arrow-left.png') }}"></a>

    <div class="content">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="input-container">
                <label for="username">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="off" required autofocus>
            </div>
            <div class="input-container">
                <label for="password">Password</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="off" required>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="button" type="submit">
                Sign in
            </button>
        </form>
    </div>
{% endblock %}
